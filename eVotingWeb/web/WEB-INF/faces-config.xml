<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    
    <!-- =========== NAVIGATION ================================== -->
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id> 
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/administrator/createElectionPage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/administrator/viewElections.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/administrator/addCommissioner.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/administrator/viewElections.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/commission/*</from-view-id>
        <navigation-case>
            <from-outcome>goMain</from-outcome>
            <to-view-id>/commission/mainCommissioner.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goViewEvent</from-outcome>
            <to-view-id>/commission/viewEvent.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goViewEvents</from-outcome>
            <to-view-id>/commission/viewEvents.xhtml</to-view-id>

        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/voters/*</from-view-id>
        <navigation-case>
            <from-outcome>goVote</from-outcome>
            <to-view-id>/voters/votingApplet.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>goNominate</from-outcome>
            <to-view-id>/voters/nominating.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>goMain</from-outcome>
            <to-view-id>/voters/mainVoter.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>goViewResultEvent</from-outcome>
            <to-view-id>/voters/resultEvent.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>voters</from-outcome>
            <to-view-id>/voters/mainVoter.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>commissioners</from-outcome>
            <to-view-id>/commission/mainCommissioner.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>administrators</from-outcome>
            <to-view-id>/administrator/mainAdmin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
